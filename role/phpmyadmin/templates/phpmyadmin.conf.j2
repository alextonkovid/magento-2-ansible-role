server {
    listen 80;
    server_name localhost;

    root /usr/share/phpmyadmin;
    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php{{ php_settings_version }}-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}